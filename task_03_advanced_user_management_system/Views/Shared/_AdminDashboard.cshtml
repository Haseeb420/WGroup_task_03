
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title_Admim_UMS</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body class="p-0 bg-light">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            @Html.ActionLink("User Management System", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand text-warning" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Admin", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Users", "Users", "Admin", new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Profile", "AdminProfile", "Admin", new { @class = "nav-link" })</li>
                  
                </ul>
                @Html.ActionLink("Logout", "Logout", "Admin", new { @class = "btn btn-danger ml-auto mr-2" })
            </div>
        </nav>

        @*main content start here*@

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
