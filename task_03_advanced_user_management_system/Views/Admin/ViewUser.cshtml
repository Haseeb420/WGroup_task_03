@model task_03_advanced_user_management_system.Models.Account
@{
    ViewBag.Title = "ViewUser";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}

<div class="row">
    <div class="col-10 mx-auto bg-white py-4 px-5">
        <h1 class="my-3">@Model.Last_Name's Details</h1>
        <hr />
        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">Account Type: </label>
            </div>
            @if (Model.Account_Type_ID == 2)
            {
                <div class="col-lg-5 col-12 my-3">
                    <p class="text-muted">Customer</p>
                </div>
            }
            else
            {
                <div class="col-lg-5 col-12 my-3">
                    <p class="text-muted">New</p>
                </div>
            }
        </div>
        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">First Name: </label>
            </div>
            <div class="col-lg-5 col-12 my-3">
                <p class="text-muted">@Model.First_Name</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">Last Name: </label>
            </div>
            <div class="col-lg-5 col-12 my-3">
                <p class="text-muted">@Model.Last_Name</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-12  my-3">
                <label class="h4">Email: </label>
            </div>
            <div class="col-lg-5  my-3 col-12">
                <p class="text-muted">@Model.Email</p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">Gender: </label>
            </div>
            <div class="col-lg-5 col-12 my-3">
                <p class="text-muted">@Model.Gender</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">Address 1: </label>
            </div>
            <div class="col-lg-5 col-12 my-3">
                <p class="text-muted">@Model.Address1</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-12 my-3">
                <label class="h4">Address 2: </label>
            </div>
            <div class="col-lg-5 col-12 my-3">
                <p class="text-muted">@Model.Address2</p>
            </div>
        </div>


        @Html.ActionLink("Back To List", "Users", "Admin", new { @class = "btn btn-secondary" })
        <a href="/Admin/ChangeType?id=@Model.Acc_ID" class="btn btn-secondary">Change Account Type</a>
        <a href="/Admin/Delete?id=@Model.Acc_ID" class="btn btn-danger">Delete</a>
    </div>
</div>

