
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_User.cshtml";
}



<div class="row my-5">
    <div class="col-8 mx-auto">
        <h3>User Profile</h3>
        <hr />

        @if (((string)Session["address1"] == "" || (string)Session["address2"] == "")||((bool)(Session["address1"] == null) || (bool)(Session["address1"] == null)))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>Hello @Session["last_name"]!</strong> Please Update your profile.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }


        <div class="row">
            <div class="col my-3">
                <label>Account_Type : </label>
                <input type="text" value=@Session["account_type"] class="form-control" readonly>
            </div>
            <div class="col my-3">
                <label>Joinning Date : </label>
                <input type="text" class="form-control" value=@Session["joining_date"] readonly>
            </div>
        </div>
        <div class="row">
            <div class="col my-3">
                <label>First Name : </label>
                <input type="text" value=@Session["first_name"] class="form-control" readonly>
            </div>
            <div class="col my-3">
                <label>Last Name : </label>
                <input type="text" class="form-control" value=@Session["last_name"] readonly>
            </div>
        </div>

        <div class="row">
            <div class="col my-3">
                <label>Email : </label>
                <input type="text" value=@Session["email"] class="form-control" readonly>
            </div>
            <div class="col my-3">
                <label>Gender : </label>
                <input type="text" class="form-control" value=@Session["gender"] readonly>
            </div>
        </div>

        <div class="row">
            <div class="col my-3">
                <label>Address 1 : </label>
                <input type="text" value=@Session["address1"] class="form-control" readonly>
            </div>
            <div class="col my-3">
                <label>Address 2 : </label>
                <input type="text" class="form-control" value=@Session["address2"] readonly>
            </div>
        </div>

        @Html.ActionLink("Back to Home", "Index", "User", new { @class = "btn btn-light btn-outline-dark mt-4" })
        @Html.ActionLink("Update Profile", "UpdateProfile", "User", new { @class = "btn btn-info mt-4" })
        @Html.ActionLink("Change Password", "UserProfile", "User", new { @class = "btn btn-dark mt-4" })

    </div>
</div>
